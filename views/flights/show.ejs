<%- include('../partials/header') %>

<section id="show-page">
  <h1>Flight <%= flight.flightNo %> Details</h1> <br>

  <div>Airline: <%= flight.airline %></div> <br>
  <div>Airport: <%= flight.airport %></div> <br>
  <div>Flight No: <%= flight.flightNo %></div> <br>
  <div>Departs: <%= flight.departs %></div>
</section>

<br><br><h2>Destinations</h2>
<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
  <label>Airport:</label>
  <select name="destination">
    <option value="ATX">ATX</option>
    <option value="PHX">PHX</option>
    <option value="SFO">SFO</option>
    <option value="DCA">DCA</option>
  </select> <br>
  <label>Arrival:</label>
  <input type="date" default="mm/dd/yyyy"> <br>
  <input type="submit" value="Add Destination">
</form>

<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Airport</th>
        <th>Arrival</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(d) { %>
        <tr>
          <td><%= d.destination %></td>
          <td><%= d.arrival %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destinations Yet</h5>
<% } %>

<%- include('../partials/footer') %>